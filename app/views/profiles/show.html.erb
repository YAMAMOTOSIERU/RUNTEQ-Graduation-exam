<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-6">
      <%= line_chart @data, height: "600px", width: "600px" %>
    </div>
    <div class="col-md-6">
      <h1 class="mb-5 text-center"><%= t('.title') %></h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col"><%= Post.human_attribute_name(:title) %></th>
            <th scope="col"><%= Post.human_attribute_name(:body) %></th>
            <th scope="col"><%= Post.human_attribute_name(:weight) %></th>
            <th scope="col"><%= Post.human_attribute_name(:created_at) %></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= truncate(post.body, length: 10) %></td>
              <td><%= post.weight %></td>
              <td><%= post.created_at.strftime('%Y-%m-%d') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>

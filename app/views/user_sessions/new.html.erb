<div class="container pt-5">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto rounded">
      <h1 class="text-center">ログイン</h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-5">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-5">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <%= f.submit "ログイン", class: "btn btn-primary d-block mx-auto", style: "width: 40%;" %>
      <% end %>
      <div class='text-center pt-3'>
        <%= link_to 'ユーザー登録ページへ', new_user_path %>
      </div>
    </div>
  </div>
</div>
